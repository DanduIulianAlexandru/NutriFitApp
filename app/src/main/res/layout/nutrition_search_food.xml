<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search a meal"
        android:iconifiedByDefault="false"
        android:background="@color/background_sections"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_sections"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:elevation="2dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/createCustomRecipeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can't Find your meal? Create a custom recipe!"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:padding="16dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected meal:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:textColor="@color/background_sections"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/selectedFoodTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carbsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/proteinTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caloriesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:background="@color/background"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonAddCustomFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Custom Food"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="0dp"/>

    <Button
        android:id="@+id/addFoodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Food"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
